.account-item {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.icon {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  background: #f5f5f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.account-info {
  flex: 1;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 4px;
  height: 100%;
}

.top,
.bottom {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.top-left {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

.top-right {
  font-size: 34rpx;
  color: #333333;
  font-family: DIN Alternate;
}

.bottom-left {
  font-size: 22rpx;
  color: #cccccc;
}

.bottom-right {
  font-size: 22rpx;
  color: #cccccc;
}