.account-plate {
  width: 100%;
  background: #ffffff;
  margin-top: 16rpx;
  padding: 0 32rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.account-title {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.account-title__left {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  font-size: 24rpx;
  color: #999999;
}

.title {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.account-title__right {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.right-con {
  display: flex;
  align-items: baseline;
  color: #999999;
  font-size: 26rpx;
  gap: 2rpx;
}

.right-number {
  font-size: 28rpx;
  color: #333333;
  font-family: DIN Alternate;
}